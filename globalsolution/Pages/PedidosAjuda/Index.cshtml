@page
@model globalsolution.Pages.PedidosAjuda.IndexModel
@{
    ViewData["Title"] = "Pedidos de Ajuda";
}

<h1>Lista de Pedidos de Ajuda</h1>

<a asp-page="Create" class="btn btn-primary">Novo Pedido</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>ID Usuário</th>
            <th>Descrição</th>
            <th>Data/Hora</th>
            <th>Localização</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pedidos)
        {
            <tr>
                <td>@item.IdUsuario</td>
                <td>@item.Descricao</td>
                <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Cidade - @item.Bairro</td>
                <td>@item.Status</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
