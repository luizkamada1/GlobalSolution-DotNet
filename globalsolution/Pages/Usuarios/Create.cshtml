@page
@model globalsolution.Pages.Usuarios.CreateModel
@{
    ViewData["Title"] = "Novo Usuário";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div>
        <label asp-for="Usuario.Nome"></label>
        <input asp-for="Usuario.Nome" class="form-control" />
    </div>
    <div>
        <label asp-for="Usuario.Email"></label>
        <input asp-for="Usuario.Email" class="form-control" />
    </div>
    <div>
        <label asp-for="Usuario.Senha"></label>
        <input asp-for="Usuario.Senha" class="form-control" type="password" />
    </div>
    <div>
        <label asp-for="Usuario.Telefone"></label>
        <input asp-for="Usuario.Telefone" class="form-control" />
    </div>
    <div>
        <label asp-for="Usuario.TipoUsuario"></label>
        <select asp-for="Usuario.TipoUsuario" class="form-control">
            <option value="">Selecione</option>
            <option value="morador">Morador</option>
            <option value="voluntario">Voluntário</option>
            <option value="autoridade">Autoridade</option>
        </select>
    </div>
    <div>
        <label asp-for="Usuario.Bairro"></label>
        <input asp-for="Usuario.Bairro" class="form-control" />
    </div>
    <div>
        <label asp-for="Usuario.Cidade"></label>
        <input asp-for="Usuario.Cidade" class="form-control" />
    </div>
    <div>
        <label asp-for="Usuario.Cep"></label>
        <input asp-for="Usuario.Cep" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Salvar</button>
</form>
