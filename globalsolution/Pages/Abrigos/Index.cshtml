@page
@model globalsolution.Pages.Abrigos.IndexModel
@{
    ViewData["Title"] = "Abrigos";
}

<h1>Lista de Abrigos</h1>

<a asp-page="Create" class="btn btn-primary">Novo Abrigo</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Capacidade Atual</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Abrigos)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Endereco</td>
                <td>@item.CapacidadeAtual / @item.CapacidadeTotal</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
